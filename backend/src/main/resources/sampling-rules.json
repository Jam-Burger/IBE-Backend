{
  "version": 2,
  "rules": [
    {
      "description": "Critical paths sampling rule",
      "host": "*",
      "http_method": "*",
      "url_path": "/api/*/bookings/*",
      "fixed_target": 1,
      "rate": 1.0,
      "priority": 1
    },
    {
      "description": "Error responses sampling rule",
      "host": "*",
      "http_method": "*",
      "url_path": "/*",
      "fixed_target": 1,
      "rate": 1.0,
      "priority": 2,
      "attributes": {
        "StatusCode": "4XX,5XX"
      }
    },
    {
      "description": "Health check sampling rule",
      "host": "*",
      "http_method": "GET",
      "url_path": "/health",
      "fixed_target": 0,
      "rate": 0.0,
      "priority": 100
    },
    {
      "description": "Default sampling rule",
      "host": "*",
      "http_method": "*",
      "url_path": "/*",
      "fixed_target": 1,
      "rate": 0.05,
      "priority": 1000
    }
  ],
  "default": {
    "fixed_target": 1,
    "rate": 0.01
  }
} 